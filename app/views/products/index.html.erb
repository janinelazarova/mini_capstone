  <h1>Products</h1>

  <% @products.each do |product| %>
   <h2> <b>Name: </b> <%= product.name %></h2>
   <h4><b>Price: </b> <%= product.price %></h4>
   <h4><b>Description: </b> <%= product.description %></h4>
   <p><b>Supplier: </b><%= product.supplier.name %></p>
   <p><b>Category: </b><%= product.category_names %></p>
 <% end %>  